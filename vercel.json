// vercel.json (απόσπασμα)
{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https:; img-src 'self' data: https:; connect-src 'self' https://*.tile.openstreetmap.org https://api.maptiler.com https://*.supabase.co; worker-src 'self' blob:; font-src 'self' https:; frame-ancestors 'none'; base-uri 'self';"
        }
      ]
    }
  ],
  "crons": [
    { "path": "/api/admin/cron/unlock-scan", "schedule": "0 4 * * *" }
  ]
}
